<%= form_for @order, url: '/orders' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :card_number %>
  <%= f.text_field :card_number %>

  <%= f.label :cvv %>
  <%= f.text_field :cvv %>

<%#maybe refactor with method to use a single date field and separate with logic %>
  <%= f.label :expiration_date %>
  <%= f.month_field :date_month,
      min: Date.today.beginning_of_month %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= f.submit %>
<% end %>
