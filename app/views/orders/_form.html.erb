<%= form_for @order, url: '/orders' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :card_number %>
  <%= f.text_field :card_number %>

  <%= f.label :cvv %>
  <%= f.text_field :cvv %>

<%#maybe refactor with method to use a single date field and separate with logic %>
  <%= f.label :date_year %>
  <%= f.text_field :date_year %>

  <%= f.label :date_month %>
  <%= f.text_field :date_month %>

  <%= f.label :date_day %>
  <%= f.text_field :date_day %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= f.submit %>
<% end %>
